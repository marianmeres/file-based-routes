{
	"openapi": "3.0.0",
	"info": {
		"title": "Test server",
		"version": "0.0.1"
	},
	"servers": [
		{
			"url": "http://0.0.0.0:9999"
		}
	],
	"paths": {
		"/hello": {
			"get": {
				"summary": "GET",
				"responses": {
					"200": {
						"description": "200 OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Any"
								}
							}
						}
					}
				}
			},
			"post": {
				"summary": "POST",
				"responses": {
					"200": {
						"description": "200 OK",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/FooOut"
								}
							}
						}
					}
				},
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/FooIn"
							}
						}
					}
				}
			}
		},
		"/hello/{name}": {
			"get": {
				"summary": "GET",
				"responses": {
					"200": {
						"description": "200 OK",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"name": {
											"type": "string"
										}
									}
								}
							}
						}
					}
				},
				"parameters": [
					{
						"in": "path",
						"name": "name",
						"required": true,
						"schema": {
							"type": "string",
							"pattern": "^\\d+$"
						}
					}
				]
			}
		}
	},
	"components": {
		"schemas": {
			"Any": {
				"type": "object"
			},
			"FooIn": {
				"type": "object",
				"properties": {
					"foo": {
						"type": "string"
					}
				},
				"required": ["foo"]
			},
			"FooOut": {
				"type": "object",
				"properties": {
					"id": {
						"type": "integer"
					},
					"foo": {
						"type": "string"
					}
				},
				"required": ["id", "foo"]
			}
		}
	}
}
